@model ProfileViewModel

<span>@Html.Label("Friend list", new { @class = "FriendList" }) @Html.Label("("+@Model.FriendList.Where(x => x.REQUEST == "Y").Count().ToString()+")",new { @class="FriendList"})</span>
  
    <div id="Friend">
        @foreach (var item in Model.FriendList)
        {
            if (item.USER_ID == (int)Session["ID"] && item.REQUEST == "Y" )
            {
                <div class="well" id="friendList">
                    <div class="row">
                        <div class="col-md-3">
                            @if (item.PB_USER.PROFILE_PIC == null)
                            {
                                <img src="~/Content/Images/default.png" id="defProfilePicture">
                            }
                            else
                            {
                                var base64 = Convert.ToBase64String(item.PB_USER.PROFILE_PIC);
                                var profilePicture = String.Format("data:image/gif;base64,{0}", base64);

                                <img src="@profilePicture" id="ownerProfilePicture" />
                            }
                        </div>
                        <div class="col-md-6">
                            @Html.Label(@item.PB_USER.FIRST_NAME) @Html.Label(@item.PB_USER.LAST_NAME)
                            <div class="cold-md-3">
                                @Html.ActionLink("View Profile", "Profile", "PasteBook", new { username = @item.PB_USER.USER_NAME }, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>
            }
       
            else if (item.FRIEND_ID == (int)Session["ID"] && item.REQUEST == "Y")
            {
                <div class="well" id="friendList">
                    <div class="row">
                        <div class="col-md-3">
                            @if (item.PB_USER1.PROFILE_PIC == null)
                            {
                                <img src="~/Content/Images/default.png" id="defProfilePicture">
                            }
                            else
                            {
                                var base64 = Convert.ToBase64String(item.PB_USER1.PROFILE_PIC);
                                var profilePicture = String.Format("data:image/gif;base64,{0}", base64);

                                <img src="@profilePicture" id="ownerProfilePicture" />
                            }
                        </div>
                        <div class="col-md-6">
                            @Html.Label(@item.PB_USER1.FIRST_NAME) @Html.Label(@item.PB_USER1.LAST_NAME)
                            <div class="cold-md-3">
                                @Html.ActionLink("View Profile", "Profile", "PasteBook", new { username = @item.PB_USER1.USER_NAME }, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
